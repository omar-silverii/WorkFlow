<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Carpeta donde entran los archivos nuevos -->
    <add key="WatchFolder.Input" value="C:\WorkflowStudio\Inbox\OC" />
    <!-- Donde mover cuando se procesó OK -->
    <add key="WatchFolder.Processed" value="C:\WorkflowStudio\Processed\OC" />
    <!-- Donde mover cuando falló -->
    <add key="WatchFolder.Error" value="C:\WorkflowStudio\Error\OC" />
    <!-- Qué workflow ejecutar por cada archivo detectado -->
    <add key="Workflow.Nombre" value="DEMO.ORDEN_COMPRA.E2E" />
    <!-- Qué variable de input se le pasa al workflow -->
    <!-- El workflow debería leer desde ${input.filePath} -->
    <add key="Workflow.InputField" value="filePath" />
    <!-- Filtro y polling -->
    <add key="WatchFolder.Pattern" value="*.txt" />
    <add key="WatchFolder.PollSeconds" value="2" />
    <add key="WatchFolder.StableChecks" value="2" />
    <add key="WatchFolder.StableDelayMs" value="500" />
    <!-- Si querés mover el archivo original a Processed/Error -->
    <add key="WatchFolder.MoveAfter" value="true" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <connectionStrings>
    <add name="DefaultConnection" connectionString="Data Source=OMARD\SQLEXPRESS;Initial Catalog=Workflow;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Identity.Client" publicKeyToken="0a613f4dd989e8ae" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.78.0.0" newVersion="4.78.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>